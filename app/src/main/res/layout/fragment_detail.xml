<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".DetailFragment">

        <ImageView
            android:id="@+id/detail_imageview"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/detail_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="basketball" />

        <TextView
            android:id="@+id/detail_supplier_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Spalding" />

        <TextView
            android:id="@+id/detail_price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$12" />

        <TextView
            android:id="@+id/detail_quantity_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="14" />

        <Button
            android:id="@+id/add_one_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" />

        <Button
            android:id="@+id/subtract_one_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <Button
            android:id="@+id/order_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete" />

    </LinearLayout>
</ScrollView>